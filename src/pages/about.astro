---
import Header from '../components/Header.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';

const name = 'Benjamin Bergstrom';
const skills = ['Laravel', 'NodeJS', 'JavaScript', 'ReactJS', 'Git', 'Astro'];
const skillColour = 'navy';
const skillBoldness = 'bold';
const skillTransform = 'uppercase';

const pageTitle = 'About';
---

<style define:vars={{ skillColour, skillBoldness, skillTransform }}>
    h1 {
        color: purple;
        font-size: 4rem;
    }

    .skill {
        color: var(--skillColour);
        font-weight: var(--skillBoldness);
        text-transform: var(--skillTransform);
    }
</style>

<BaseLayout pageTitle={pageTitle}>
    <p>My name is {name}</p>

    <h2>Skills</h2>
    <ul>
        {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>
    <p>PS I am gay</p>
</BaseLayout>
